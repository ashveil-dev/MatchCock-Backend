{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "module": "commonjs",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "baseUrl": "./src", 
    "paths": {
      "@apis" : ["./apis"],
      "@type/*" : ["./type/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    
  }
}